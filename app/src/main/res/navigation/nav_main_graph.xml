        android:name="com.am.myfeed.HeadlinesFeedFragment"
        android:label="fragment_headlines_feed"
        tools:layout="@layout/fragment_headlines_feed" ></fragment>
    <fragment
        android:id="@+id/favoriteArticlesFragment"
        android:name="com.am.myfeed.FavoriteArticlesFragment"
        android:label="fragment_favorite_articles"
        tools:layout="@layout/fragment_favorite_articles" ></fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.am.myfeed.ProfileFragment"
